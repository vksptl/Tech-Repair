<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     >

        <com.synnapps.carouselview.CarouselView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/carousel1"
            app:slideInterval="3000"
            android:focusableInTouchMode="true">
        </com.synnapps.carouselview.CarouselView>

      <android.support.v7.widget.CardView
          android:layout_width="300dp"
          android:layout_height="300dp"
          android:layout_below="@id/carousel1"
          android:layout_marginLeft="30dp"
          android:layout_marginTop="30dp"
          android:layout_marginRight="30dp"
          >
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="20dp"
              android:orientation="horizontal">

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="CORPORATE OFFICE ADDRESS"
                  android:textSize="18dp"
                  android:layout_marginTop="10dp"
                  android:paddingTop="5dp"
                  android:id="@+id/t1"
                  android:paddingBottom="5dp"
                  android:textStyle="bold"

                  />

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/t2"
                  android:layout_below="@id/t1"
                  android:text="Jaypee Institute Of Information Technology, Sec-128."
                  android:textSize="18dp"

                  android:layout_marginTop="10dp"
                  android:textStyle="bold"

                  />
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/t3"
                  android:layout_below="@id/t2"
                  android:text="Noida."
                  android:textSize="18dp"

                  android:layout_marginTop="0dp"
                  android:textStyle="bold"

                  />
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/t4"
                  android:layout_below="@id/t3"
                  android:text="Email- vksptl1995@gmail.com"
                  android:textSize="18dp"
                  android:layout_marginTop="10dp"
                  android:textStyle="bold"

                  />

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/t5"
                  android:layout_below="@id/t4"
                  android:text="Phone- (+91)7053980747"
                  android:textSize="18dp"
                  android:layout_marginBottom="0dp"
                  android:layout_marginTop="10dp"
                  android:textStyle="bold"

                  />

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
                  android:id="@+id/img1"
                  android:layout_marginRight="2dp"
                  android:src="@drawable/instagram"
                  android:layout_below="@id/t5"
                  />

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/img2"
                  android:layout_marginRight="2dp"
                  android:src="@drawable/facebook"
                  android:layout_alignTop="@+id/img3"
                  android:layout_toRightOf="@+id/img3"
                  android:layout_toEndOf="@+id/img3" />

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/img3"
                  android:layout_marginRight="2dp"
                  android:src="@drawable/twitter"
                  android:layout_alignTop="@+id/img4"
                  android:layout_toRightOf="@+id/img4"
                  android:layout_toEndOf="@+id/img4" />
              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/img4"
                  android:layout_marginRight="2dp"
                  android:src="@drawable/linkedin"
                  android:layout_alignTop="@+id/img1"
                  android:layout_toRightOf="@+id/img1"
                  android:layout_toEndOf="@+id/img1" />





          </RelativeLayout>

      </android.support.v7.widget.CardView>



    </RelativeLayout>
</RelativeLayout>
</ScrollView>