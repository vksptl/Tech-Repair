<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.vikas.gadgetsrepair2.BeforeLogin">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:id="@+id/imageView2"
        android:src="@drawable/before"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true" />

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:id="@+id/cd"
        android:layout_marginBottom="10dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t1"
        android:textStyle="bold"
        android:text="Services you can trust. Quality you can afford."/>

    </android.support.v7.widget.CardView>


    <ImageView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/imageView3"
        android:src="@drawable/fb"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/cd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/imageView4"
        android:src="@drawable/gog"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:layout_marginRight="16dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignRight="@+id/cd"
        android:layout_alignEnd="@+id/imageView2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:layout_marginTop="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:src="@drawable/text2"
        android:layout_below="@+id/imageView4"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/imageView6"
        android:paddingLeft="16dp"
        android:src="@drawable/login"
        android:layout_below="@+id/imageView5"
     android:layout_marginLeft="40dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/imageView7"
        android:paddingLeft="16dp"
        android:src="@drawable/signup"
        android:layout_below="@id/imageView5"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4" />
</RelativeLayout>
